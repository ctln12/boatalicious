<div class="navbar navbar-expand-sm fixed-top navbar-dark bg-dark navbar-boatalicious">
  <%= link_to "Boatalicious", "/", class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if !user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Sign Up", "/users/sign_up", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign In", "/users/sign_in", class: "nav-link" %>
        </li>
      <% end %>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to current_user.email, "/bookings", class: "nav-link" %>
          </li>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
          src=" <% if current_user.user_image.nil? %>
                  <%= image_url('default_avatar.svg') %>
                <% else %>
                  <%= current_user.user_image %>
                <% end %>" />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", "/bookings", class: "dropdown-item" %>
            <%= link_to "New booking", "/", class: "dropdown-item" %>
            <%= link_to "Add a boat", boats_new_path, class: "dropdown-item" %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        <% end %>
      </li>

    </ul>
  </div>
</div>
