<div class="container-bookings-new">
  <div class="form-wrapper">
    <h1><%= @booking.boat.price_per_day %>.- <span style="font-size: 0.6em"> CHF per day</span></h1>
    <%= simple_form_for @booking do |f| %>
      <%= f.input :boat_id, as: :hidden %>
      <%= f.input :start_date, as: :string, label: false, wrapper_html: { class: 'dates_input_wrapper' }, placeholder: "Pick a date", input_html: { id: 'start_date' } %>
      <%= f.input :end_date, as: :string, wrapper_html: { class: 'dates_input_wrapper' }, label: false, input_html: { id: 'end_date' } %>
      <%= f.button :submit, class: 'btn btn-primary'  %>
    <% end %>
  </div>
  <div class="fees">
    <p>Cleaning fees</p>
    <p><%= @cleaning %>  CHF per day</p>
  </div>
  <div class="fees">
    <p>Tourism fees</p>
    <p><%= @tourism %>  CHF per day</p>
  </div>
  <div class="fees">
    <p>Total price</p>
    <p><%= @booking.price %> CHF per day</p>
  </div>
</div>
