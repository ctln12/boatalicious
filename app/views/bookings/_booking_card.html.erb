<a href="#" class="card-boats">
  <div class="card mt-4 card-boats-size">
    <img src="<%= booking.boat.photo %>" class="card-img-top card-boats-image-height" alt="boat image">
    <div class="card-body card-boats-body-height">
      <!-- <h6 class="card-subtitle mb-2 text-muted card-boats-font-size"><%= booking.boat.boat_type %></h6> -->
      <p class="card-text card-boats-text-font-size">
      <h5 class="card-title" id="booking-title"><%= booking.boat.name %></h5>
        <div class="row">
          <div class="col card-boats-text-font-size"><%= booking.boat.location %></div>
          <div class="col card-price text-right"><%= booking.price %>.-</div>
        </div>
        <div class="row">
          <div class="col card-boats-text-font-size">
            <%= booking.start_date.strftime(' From  %B %d ') %>
            <%= booking.end_date.strftime('  to  %B %d, %Y ') %>
          </div>
        </div>
    </div>
  </div>
</a>
