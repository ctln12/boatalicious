<%= render 'home_banner' %>
<div class="main-container d-flex">
  <div class="cards col-8">
    <div class="row mt-5">
      <% @boats.each do |boat| %>
        <div class="col-6 mb-5">
          <%= render 'boat_card', boat: boat %>
        </div>
      <% end %>
    </div>
  </div>
  <div
    id="map"
    class="col-4"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>





