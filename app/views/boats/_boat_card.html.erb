<a href="/boats/<%= boat.id %>" class="card-boats">
  <div class="card-boats-size">
    <%= cl_image_tag boat.photo, class: "card-img-top card-boats-image-height", aspect_ratio:"4:3", crop: "fill" %>
    <div class="card-body card-boats-body-height">
      <h6 class="card-subtitle mb-1 text-muted card-boats-font-size"><%= boat.boat_type %></h6>
      <h5 class="card-title"><%= boat.name %></h5>
      <p class="card-text card-boats-text-font-size">
        <%= boat.location %>
      </p>
      <p class="card-text card-boats-text-font-size">
        <%= boat.capacity %> people
      </p>
    </div>
  </div>
</a>
